<main class="content">
  <button type="button" id="add-story-button">Add Story</button>
  <div id="add-story-modal" class="hidden">
    <div class="modal-dialog">
      <div class="modal-header">
        <h3>Add a Story</h3>
        <button type="button" id="modal-close" class="modal-hide-button">&times;</button>
      </div>

      <div class="modal-body">
        <div class="post-input-element">
          <label for="post-link-input">Link:</label>
          <input type="text" id="post-link-input"></input>
        </div>

        <div class="post-input-element">
          <label for="post-title-input">Title:</label>
          <input type="text" id="post-title-input">
        </div>

        <div class="post-input-element">
          <label for="post-date-input">Date:</label>
          <input type="text" id="post-date-input">
        </div>

        <div class="post-input-element">
          <label for="post-name-input">Name:</label>
          <input type="text" id="post-name-input">
        </div>

        <div class="post-input-element">
          <label for="post-snipit-input">Snipit:</label>
          <input type="text" id="post-snipit-input">
        </div>

        <div class="post-input-element">
          <label for="post-content-input">Content:</label>
          <input type="text" id="post-content-input">
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" id="modal-cancel" class="modal-hide-button action-button">Cancel</button>
        <button type="button" id="modal-accept" class="action-button">Create Post</button>
      </div>
    </div>
  </div>

  <section id="home-posts">
    {{#each allHomePosts}}
      {{> homePost}}
    {{/each}}
  </section>
</main>
